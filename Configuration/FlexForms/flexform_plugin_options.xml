<T3DataStructure>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>Options</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.selectedWishlist>
						<TCEforms>
							<label>Selectbox your Wishlist:</label>
							<config>
								<type>select</type>
								<items type="array" />
								<foreign_table>tx_cbwishlist_domain_model_wishlist</foreign_table>
							</config>
						</TCEforms>
					</settings.selectedWishlist>
					<settings.giftsPerPage>
						<TCEforms>
							<label>Max. number of gifts to display per page:</label>
							<config>
								<type>input</type>
								<size>2</size>
								<eval>int</eval>
								<default>10</default>
							</config>
						</TCEforms>
					</settings.giftsPerPage>
					<settings.pathToWishlistImage>
						<TCEforms>
							<label>Image Storage</label>
							<config>
								<type>input</type>
								<size>200</size>
								<eval>string</eval>
								<default>fileadmin/Wishlist_Img</default>
							</config>
						</TCEforms>
					</settings.pathToWishlistImage>
					<settings.selectedColums>
						<TCEforms>
							<label>Select your Colums to show on singel gift:</label>
							<config>
								<type>select</type>
								<multiple>1</multiple>
								<size>10</size>
								<maxitems>20</maxitems>
								<autosizemax>10</autosizemax>
								<allownonidvalues>1</allownonidvalues>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">Name</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">Price</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">Description</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">Image</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">Reserved</numIndex>
										<numIndex index="1">4</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.selectedColums>
				</el>
			</ROOT>
		</sDEF>
	</sheets>
</T3DataStructure>
